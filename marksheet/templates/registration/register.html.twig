{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}

{% block body %}
            <div class="box">

    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Register
            </h1>

            {{ form_start(registrationForm) }}
            <div class="d-flex justify-content-center mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'style': 'width: 200px;'}}) }}
            </div>
            <div class="d-flex justify-content-center mb-3">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password', 'style': 'width: 200px;'}}) }}
            </div>
            
            {{ form_row(registrationForm.agreeTerms) }}
            
            <button 
                type="submit" 
                class="btn btn-primary btn-lg mt-3">
                Register
            </button>
            
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}
